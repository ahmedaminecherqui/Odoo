<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_library_member_tree" model="ir.ui.view">
        <field name="name">library.member.tree</field>
        <field name="model">library.member</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="member_number"/>
                <field name="state"/>
            </list>
        </field>
    </record>

    <record id="view_library_member_form" model="ir.ui.view">
        <field name="name">library.member.form</field>
        <field name="model">library.member</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="partner_id"/>
                            <field name="member_number"/>
                        </group>
                        <group>
                            <field name="date_start"/>
                            <field name="date_end"/>
                            <field name="state"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_library_member" model="ir.actions.act_window">
        <field name="name">Membres</field>
        <field name="res_model">library.member</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="menu_library_member_list" name="Membres" parent="menu_library_members" action="action_library_member"/>
</odoo>
