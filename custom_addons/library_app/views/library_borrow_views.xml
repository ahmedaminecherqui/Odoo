<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_library_borrow_tree" model="ir.ui.view">
        <field name="name">library.book.borrow.tree</field>
        <field name="model">library.book.borrow</field>
        <field name="arch" type="xml">
            <list>
                <field name="book_id"/>
                <field name="member_id"/>
                <field name="borrow_date"/>
                <field name="return_date"/>
                <field name="state"/>
            </list>
        </field>
    </record>

    <record id="view_library_borrow_form" model="ir.ui.view">
        <field name="name">library.book.borrow.form</field>
        <field name="model">library.book.borrow</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="book_id"/>
                            <field name="member_id"/>
                        </group>
                        <group>
                            <field name="borrow_date"/>
                            <field name="return_date"/>
                            <field name="date_returned"/>
                            <field name="state"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_library_borrow" model="ir.actions.act_window">
        <field name="name">Emprunts</field>
        <field name="res_model">library.book.borrow</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="menu_library_borrow_list" name="Tous les emprunts" parent="menu_library_loans" action="action_library_borrow"/>
</odoo>
