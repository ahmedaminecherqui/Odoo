<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Tree View -->
    <record id="view_library_book_tree" model="ir.ui.view">
        <field name="name">library.book.tree</field>
        <field name="model">library.book</field>
        <field name="arch" type="xml">
            <list decoration-info="state=='draft'" decoration-danger="state=='lost'" decoration-muted="state=='maintenance'">
                <field name="name"/>
                <field name="author_id"/>
                <field name="date_publication"/>
                <field name="state"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_library_book_form" model="ir.ui.view">
        <field name="name">library.book.form</field>
        <field name="model">library.book</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_make_available" string="Rendre disponible" type="object" invisible="state != 'draft'" class="oe_highlight"/>
                    <button name="action_borrow" string="Emprunter" type="object" invisible="state != 'available'" class="oe_highlight"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1><field name="name"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="author_id"/>
                            <field name="publisher_id"/>
                            <field name="category_id"/>
                            <field name="isbn"/>
                        </group>
                        <group>
                            <field name="date_publication"/>
                            <field name="pages"/>
                            <field name="price"/>
                            <field name="active" invisible="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Description">
                            <field name="description"/>
                        </page>
                        <page string="Emprunts">
                            <field name="borrow_ids"/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_library_book" model="ir.actions.act_window">
        <field name="name">Livres</field>
        <field name="res_model">library.book</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="menu_library_book_list" name="Tous les livres" parent="menu_library_books" action="action_library_book"/>
</odoo>
