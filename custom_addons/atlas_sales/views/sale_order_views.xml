<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_order_form_inherit_atlas" model="ir.ui.view">
        <field name="name">sale.order.form.inherit.atlas</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='action_confirm'][1]" position="after">
                <button name="action_approve" string="Approuver" type="object" 
                        class="btn-primary" invisible="state != 'to_approve'"
                        groups="sales_team.group_sale_manager"/>
            </xpath>
            <xpath expr="//button[@name='action_confirm'][2]" position="attributes">
                <attribute name="invisible">state in ('draft', 'sent', 'to_approve')</attribute>
            </xpath>
        </field>
    </record>
</odoo>
