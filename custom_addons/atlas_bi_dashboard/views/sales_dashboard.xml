<odoo>
    <!-- ACTION 1: Pipeline Graph (Devis) -->
    <record id="action_bi_quotes_pipeline" model="ir.actions.act_window">
        <field name="name">Pipeline des Devis</field>
        <field name="res_model">sale.order</field>
        <field name="view_mode">graph</field>
        <field name="domain">[('state', 'in', ['draft', 'sent'])]</field>
        <field name="context">{'group_by': ['date_order:month'], 'measure': 'amount_total'}</field>
    </record>

    <!-- ACTION 2: Sales by Salesperson (Pivot) -->
    <record id="action_bi_sales_by_person" model="ir.actions.act_window">
        <field name="name">Ventes par Vendeur</field>
        <field name="res_model">sale.report</field>
        <field name="view_mode">pivot</field>
        <field name="domain">[('state', 'in', ['sale', 'done'])]</field>
        <field name="context">{'group_by': ['user_id'], 'measure': 'price_total'}</field>
    </record>

    <!-- BOARD VIEW -->
    <record id="board_bi_sales_view" model="ir.ui.view">
        <field name="name">bi.sales.board</field>
        <field name="model">board.board</field>
        <field name="arch" type="xml">
            <form string="Tableau de Bord Commercial">
                <board style="2-1">
                    <column>
                        <action name="%(action_bi_quotes_pipeline)d" string="Pipeline Devis (Montant)"/>
                    </column>
                    <column>
                        <action name="%(action_bi_sales_by_person)d" string="Performance Vendeurs"/>
                    </column>
                </board>
            </form>
        </field>
    </record>

    <!-- ACTION TO OPEN BOARD -->
    <record id="open_board_bi_sales" model="ir.actions.act_window">
        <field name="name">Tableau de Bord Commercial</field>
        <field name="res_model">board.board</field>
        <field name="view_mode">form</field>
        <field name="usage">menu</field>
        <field name="view_id" ref="board_bi_sales_view"/>
    </record>

    <!-- MENU -->
    <menuitem id="menu_bi_sales_view"
              parent="menu_bi_sales"
              action="open_board_bi_sales"
              sequence="1"/>
</odoo>
