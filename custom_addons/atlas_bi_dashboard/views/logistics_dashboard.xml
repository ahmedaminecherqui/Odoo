<odoo>
    <!-- ACTION 1: Stock Analysis (Pivot) -->
    <record id="action_bi_stock_analysis" model="ir.actions.act_window">
        <field name="name">Analyse de Stock</field>
        <field name="res_model">stock.quant</field>
        <field name="view_mode">pivot</field>
        <field name="context">{'group_by': ['location_id', 'product_id'], 'measure': 'quantity'}</field>
    </record>

    <!-- ACTION 2: Delivery Analysis (Graph) -->
    <record id="action_bi_delivery_analysis" model="ir.actions.act_window">
        <field name="name">Analyse des Livraisons</field>
        <field name="res_model">stock.picking</field>
        <field name="view_mode">graph</field>
        <field name="domain">[('picking_type_code', '=', 'outgoing'), ('state', '=', 'done')]</field>
        <field name="context">{'group_by': ['date_done:week']}</field>
    </record>

    <!-- BOARD VIEW -->
    <record id="board_bi_logistics_view" model="ir.ui.view">
        <field name="name">bi.logistics.board</field>
        <field name="model">board.board</field>
        <field name="arch" type="xml">
            <form string="Tableau de Bord Logistique">
                <board style="2-1">
                    <column>
                        <action name="%(action_bi_stock_analysis)d" string="Niveaux de Stock"/>
                    </column>
                    <column>
                        <action name="%(action_bi_delivery_analysis)d" string="Livraisons (Hebdo)"/>
                    </column>
                </board>
            </form>
        </field>
    </record>

    <!-- ACTION TO OPEN BOARD -->
    <record id="open_board_bi_logistics" model="ir.actions.act_window">
        <field name="name">Tableau de Bord Logistique</field>
        <field name="res_model">board.board</field>
        <field name="view_mode">form</field>
        <field name="usage">menu</field>
        <field name="view_id" ref="board_bi_logistics_view"/>
    </record>

    <!-- MENU -->
    <menuitem id="menu_bi_logistics_view"
              parent="menu_bi_logistics"
              action="open_board_bi_logistics"
              sequence="1"/>
</odoo>
