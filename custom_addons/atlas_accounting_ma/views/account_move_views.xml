
<odoo>
    <record id="view_move_form_ma" model="ir.ui.view">
        <field name="name">account.move.form.ma</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='ref']" position="after">
                <field name="l10n_ma_tax_report" invisible="move_type not in ('out_invoice', 'in_invoice')"/>
            </xpath>
        </field>
    </record>
</odoo>
